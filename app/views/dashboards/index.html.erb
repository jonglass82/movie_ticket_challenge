<body>

<h1>Admin Dashboard</h1>


<button><a href="/auditorium/new">Create a new auditorium</a></button><br>

<button><a href="/movie/new">Create a new movie</a></button>


<h2>Current Auditoriums and movie listings:</h2> 

 <% @auditoriums.each do |auditorium| %>

 <h3> <%= auditorium.space_name %> <a href="/auditorium/edit/<%= auditorium.id %>">Edit</a></h3>

      <% auditorium.movies.each do |movie| %>
        <ul>
          <li><%= movie.title %> | <b><%= movie.show_time %></b> | Remaining tickets: <%= auditorium.capacity %> |  <a href="/movie/edit/<%= movie.id %>">Edit</a></li>
        </ul>
       
      <% end %>

  <% end %>


<h2>View all ticket sales:</h2>

<% @ticket_sales.each do |sale| %>
  <ul>
    <li><%= sale.customer_name %> | <%= sale.created_at %> | </li>
  </ul>
<% end %>

</body>