<div class="container" id="dashboard">

<h1>Admin Dashboard</h1>

<br>

<div class="row">

  <div class="col-sm-6"><button class="dashboard_buttons"><a href="/auditorium/new">Create a new auditorium</a></button><br></div>

  <div class="col-sm-6"><button class="dashboard_buttons"><a href="/movie/new">Create a new movie</a></button></div>

</div>

<br>

<div class="container">
  <h2>Current Auditoriums and movie listings:</h2> 

  <% @auditoriums.each do |auditorium| %>

 <h3> <%= auditorium.space_name %> <a href="/auditorium/edit/<%= auditorium.id %>">Edit</a></h3>

      <% auditorium.movies.each do |movie| %>
      <% if movie.active %>
        <ul>
          <li><%= movie.title %> | <b><%= movie.show_time %></b> | Remaining tickets: <%= movie.available_tickets %> |  <a href="/movie/edit/<%= movie.id %>">Edit</a></li>
        </ul>
        <% end %>
       
      <% end %>

  <% end %>
</div>
<br>
<br>

<div class="container">
    <h2>View all ticket sales:</h2>

    <% @ticket_sales.each do |sale| %>
      <ul>
        <li><%= sale.customer_name %> | <%= Ticket.find_by_id(sale.ticket_id).movie.title %> | <%= sale.created_at %> | </li>
      </ul>
    <% end %>
</div>

</div>