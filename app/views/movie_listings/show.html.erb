
<div class="container">

    <div class="card mb-3" style="width: 100%;">
       <div class="row no-gutters">

          <div class="col-md-4">
            <img src=<%= @movie[:image_url]%> class="card-img" alt="movie_image">
          </div>

      
      <div class="col-md-4">
        <div class="card-body">
          <h5 class="card-title"><%= @movie[:title] %></h5>
          <p class="card-text"><b>Rated:</b> <%= @movie[:rating] %></p>
          <p class="card-text"><b>Runtime:</b> <%= @movie[:run_time] %></p>
          <p class="card-text"><b>Genre:</b> <%= @movie[:genre] %></p>
          <p class="card-text"><b>Starring:</b> <%= @movie[:actors] %></p>
          <p class="card-text"><b>Plot:</b> <%= @movie[:plot] %></p>

                <div class="container">
                  <h5><b>Showtimes for today:</b> <%= Date.today.strftime("%A")%> <%= Date.today.strftime("%B") %> <%= Date.today.day %>, <%= Date.today.year %></h5>
                </div>

                <div id="showtimes">
                 
                     <% @movie.showtimes.sort_by{|s|s.time}.each do |showtime| %>
                               <% if showtime.available_tickets > 0 %>
                                 <button type="button" class="btn btn-secondary"><a href="/new_purchase/<%= showtime.id %>" style="color: white;"><%= showtime.time %></a></button>
                              <% else %>
                                 <button type="button" class="btn btn-secondary" disabled>SOLD OUT</button>
                              <% end %> 
                      <% end %>
                 
                </div>
            </div>

        </div>

    </div>
  </div>
</div>

<button><a href="/">Back to showtimes</a></button>