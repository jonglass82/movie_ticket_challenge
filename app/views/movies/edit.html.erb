<div class="container">

<h1>Update your movie listing here</h1>


   <form action="/movie/update/<%= @movie.id %>" method="patch">

        <div class="form-group">
          <label for="title">Movie Title:</label>
          <input name="title" class="form-control" id="title" aria-describedby="title" value="<%= @movie.title %>">
        </div>

         <div class="form-group">
          <label for="show_time">Show Time:</label>
          <input name="show_time" class="form-control" id="show_time" aria-describedby="show_time" value="<%= @movie.show_time %>">
        </div>

        <div class="form-group">
          <label for="auditorium">Location:</label>
          <input name="auditorium" class="form-control" id="auditorium" aria-describedby="auditorium" value="<%= @movie.auditorium_id %>">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>

    </form>

</div>