<div class="container">

<h1>Create a new showtime</h1>

      <form action="/showtime/create" method="post">

        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text" for="movie_id">Movie:</label>
            </div>

          <select name="movie_id" class="custom-select" id="movie_id">

            <option name="movie_id" selected>Choose a movie</option>

                  <%= @movies.each do |movie| %>

                      <option name="movie_id" value=<%= movie.id %>><%= movie.title %></option>

                  <% end %>

          </select>

        </div>


        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text" for="inputGroupSelect01">Auditorium:</label>
            </div>

            <select name="auditorium_id" class="custom-select" id="inputGroupSelect01">

              <option name="auditorium_id" selected>Choose an Auditorium</option>

                   <%= @auditoriums.each do |auditorium| %>

                          <option name="auditorium_id" value=<%= auditorium.id %>><%= auditorium.space_name %></option>

                    <% end %>

            </select>

        </div>

        <div class="form-group">
          <label for="time">Time:</label>
          <input name="time" class="form-control" id="time" aria-describedby="time" value="">
        </div>

        <div class="form-group">
          <label for="date">Date:</label>
          <input name="date" class="form-control" id="date" aria-describedby="date" value="">
        </div>

        <div class="form-group">
          <label for="available_tickets">Available Tickets:</label>
          <input name="available_tickets" class="form-control" id="available_tickets" aria-describedby="auditorium" value="">
        </div>

        <button type="submit" class="btn btn-primary">Create Showtime</button>

      </form>
</div>